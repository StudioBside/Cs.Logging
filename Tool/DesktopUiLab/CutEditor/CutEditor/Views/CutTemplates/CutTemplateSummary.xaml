<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:lcvt="clr-namespace:CutEditor.Converters"
    xmlns:converters="clr-namespace:Du.Presentation.Converters;assembly=Du.Presentation"
    xmlns:behaviors="clr-namespace:Du.Presentation.Behaviors;assembly=Du.Presentation"
    xmlns:viewmodels="clr-namespace:CutEditor.ViewModel;assembly=CutEditor.ViewModel"
    >

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="CutCommon.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <DataTemplate x:Key="CutSummaryTemplet">
        <Border Style="{StaticResource ChangeSelectedBgStyle}" CornerRadius="3">
            <Grid Margin="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5,0">
                    <TextBlock DockPanel.Dock="Left" Grid.Row="0" Grid.Column="0"
                                   VerticalAlignment="Center"
                                   Margin="0,0,50,0">
                            <Run>Uid : </Run>
                            <Run Text="{Binding Cut.Uid, Mode=OneWay}" />
                    </TextBlock>

                    <Border BorderBrush="{StaticResource AnchorBrush}" BorderThickness="1"
                            Margin="0,0,10,0" Padding="5"
                            CornerRadius="10"
                            Visibility="{Binding Cut.JumpAnchor, Converter={converters:EnumToCollapsedConverter}, ConverterParameter=None}">
                        <TextBlock VerticalAlignment="Center" Text="{Binding Cut.JumpAnchor}" />
                    </Border>

                    <TextBlock Margin="0,0,10,0"
                               Foreground="Red"
                               VerticalAlignment="Center"
                               Text="{Binding Cut.CutsceneClear}"
                               Visibility="{Binding Cut.CutsceneClear, Converter={converters:EnumToCollapsedConverter}, ConverterParameter=NONE}"/>

                    <TextBlock VerticalAlignment="Center" Text="{Binding SummaryText}">
                        <b:Interaction.Behaviors>
                            <behaviors:TextBlockColorBehavior />
                        </b:Interaction.Behaviors>
                    </TextBlock>

                </StackPanel>
            </Grid>
        </Border>
    </DataTemplate>
</ResourceDictionary>