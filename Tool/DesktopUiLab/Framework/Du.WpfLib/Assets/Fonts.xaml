<!-- Fonts.xaml -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--<FontFamily x:Key="CustomFont">pack://application:,,,/Binder;component/Assets/NanumGothic.ttf#나눔고딕</FontFamily>-->
    <FontFamily x:Key="CustomFont">pack://application:,,,/Du.WpfLib;component/Assets/NotoSansKR-Regular.ttf#Noto Sans KR</FontFamily>
    <!--<FontFamily x:Key="CustomFont">Consolas</FontFamily>-->

    <Style TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource CustomFont}" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource CustomFont}" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!-- 다른 컨트롤에 대한 스타일도 추가 가능 -->
</ResourceDictionary>
